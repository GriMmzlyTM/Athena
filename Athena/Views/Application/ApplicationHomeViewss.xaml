<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Athena.Views.Application.ApplicationStatusView" >
	<Grid Width="400" Height="200" ShowGridLines="True">
		<StackPanel 
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Spacing="15">
			<StackPanel 
				Name="player-data">
				<TextBlock 
					Text="{Binding PlayerWelcome}"/>
			</StackPanel>
			<Button
			Width="200"
			Height="35">
				<TextBlock
					TextAlignment="Center"
					Text="Hello" />
			</Button>
			<StackPanel Orientation="Vertical">
				<TextBox 
					Name="SummonerNameTextBox"
					Width="200" 
					Height="25"
					AcceptsReturn="False"
					Watermark="Summoner name..."
				/>
				<Button 
					Width="200" 
					Height="40"
					Command="{Binding UpdateSummoner}"
					CommandParameter="{Binding #SummonerNameTextBox.Text}">Search Summoner</Button>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
